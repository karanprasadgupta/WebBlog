<%- include("partials/header.ejs") %>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle" autofocus="off" autocomplete="off" required>  
        <label>Post</label>
        <textarea class="form-control" name="postBody" rows="5" cols="40" autofocus="off" autocomplete="off" required></textarea> 
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>
